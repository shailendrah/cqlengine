            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <!-- bizarrely version 1.6 has some environment issues
                <version>1.3</version>
                -->
                <executions>
                    <execution>
                        <!-- msgcat.xml should be generated before weblogic-msgcat-plugin which gets invoked from generate-sources -->
                        <phase>initialize</phase>
                        <configuration>
                            <tasks>
                                <property name="project.build.sourceDirectory"
                                          value="${project.build.sourceDirectory}"/>
                                <property name="project.build.generatedsrc" value="${project.build.generatedsrc}"/>
                                <property name="project.parent.basedir" value="${project.basedir}/../"/>
                                <property name="project.build.msgcat" value="${project.build.msgcat}"/>
                                <property name="maven.compile.classpath" refid="maven.compile.classpath"/>
                                <ant antfile="build-parser.xml" target="gen.parser"/>
                                <ant antfile="build-colt.xml" target="gen.colt"/>
                                <ant antfile="build-msgcat.xml" target="gen.msgcat"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <configuration>
                    <schemaDirectory>${project.build.sourceDirectory}</schemaDirectory>
                    <generateDirectory>${project.build.generatedsrc}</generateDirectory>
                    <schemaIncludes>
                        <include>**/CEPLoad.xsd</include>
                    </schemaIncludes>
                    <schemaExcludes>
                        <exclude>**/.ade_path/**</exclude>
                    </schemaExcludes>
                    <generatePackage>oracle.cep.service</generatePackage>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
